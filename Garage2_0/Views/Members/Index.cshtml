@model IEnumerable<Garage2_0.Models.Member>
@{
    ViewBag.Title = "Index";
}
<h2>Medlemsöversikt</h2>
<p>
    @Html.ActionLink("Registrera ny medlem", "Create")
</p>


@**********@
<h2>Sök</h2>
@using (Html.BeginForm())
{
    <fieldset>
        <p>
            @Html.RadioButton("option", "namn", true)
            <label for="sizeLarge">Name</label>
            @Html.RadioButton("option", "id")
            <label for="sizeLarge">Id</label>
            @Html.TextBox("search")
            <input type="submit" value="Sök" class="btn btn-default" />
        </p>
    </fieldset>
}
@if (ViewBag.Count == 0)
{<H4>Ingen träff</H4>}
else
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactInfo)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactInfo)
                </td>

                <td>
                    @Html.ActionLink("Redigera", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detaljvy", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}
